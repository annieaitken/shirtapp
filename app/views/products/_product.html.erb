<% cache @products do %>

<div class="container">
  <div class="products_row product_section">
    <% @products.each do |product| %>
    <div class="col-sm-2 col-md-4 under_product">
      <%= image_tag(product.image_url, class: "img-responsive") %>
      <h4><%= link_to product.name, product %></h4>
      <strong><p><%= product.price %></p></strong>
      <p><%= link_to 'View', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>

    </div><!-- /col -->
    <% end %>
  </div>
</div>

<% end %>